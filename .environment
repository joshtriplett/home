#!/bin/sh
PATH="$HOME/.local/bin:/usr/lib/ccache:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games"
LC_COLLATE=C
EDITOR="$HOME/.local/bin/vim-wrapper"
PAGER=less
LESS='-iQR'
LESSHISTFILE=-
BROWSER=firefox
GZIP='-9'
ENSCRIPT='--header=|$n --highlight --media=letter --color'
GREP_OPTIONS='--color=auto'
GREP_COLOR='1;32'
export PATH LC_COLLATE EDITOR LESS LESSHISTFILE BROWSER GZIP ENSCRIPT GREP_OPTIONS GREP_COLOR

if [ -r "$HOME/.ssh/agent-$HOSTNAME" ] ; then
    . "$HOME/.ssh/agent-$HOSTNAME" > /dev/null
fi

case " $(echo $(locale -a)) " in
    *\ C.UTF-8\ *) LANG=C.UTF-8 ;;
    *\ C.utf8\ *) LANG=C.utf8 ;;
    *\ en_US.utf8\ *) LANG=en_US.utf8 ;;
    *\ en_US.UTF-8\ *) LANG=en_US.UTF-8 ;;
    *) LANG=C ;;
esac
export LANG

EMAIL='josh@joshtriplett.org'
NAME='Josh Triplett'
DEBEMAIL=$EMAIL
DEBFULLNAME="$NAME"
GIT_AUTHOR_NAME="$NAME"
GIT_AUTHOR_EMAIL=$EMAIL
GIT_COMMITTER_NAME="$NAME"
GIT_COMMITTER_EMAIL=$EMAIL
export EMAIL NAME DEBEMAIL DEBFULLNAME GIT_AUTHOR_NAME GIT_AUTHOR_EMAIL GIT_COMMITTER_NAME GIT_COMMITTER_EMAIL
