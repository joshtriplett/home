[color]
	ui=auto

[color "grep"]
	match = bold green

[imap]
	folder="Drafts"
	tunnel="cloud-imap"

[log]
	decorate=short

[push]
	default=current

[url "ssh://joshtriplett.org/"]
	pushInsteadOf = "https://joshtriplett.org/"
	pushInsteadOf = "git://joshtriplett.org/"

[url "ssh://git@github.com/"]
	pushInsteadOf = "https://github.com/"
	pushInsteadOf = "git://github.com/"

[include]
	path = ~/.private/gitconfig
