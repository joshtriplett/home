[branch]
	sort = v:refname

[color]
	ui=auto

[color "diff"]
	old = red bold
	new = green bold

[color "grep"]
	match = bold green
	filename = magenta
	separator = cyan

[color "status"]
	added = green bold
	branch = cyan bold
	changed = red bold
	nobranch = red bold
	unmerged = red bold
	untracked = red bold

[column]
	status = auto dense
	tag = auto dense

[commit]
	verbose = true

[diff]
	tool=vimdiff

[format]
	thread=true

[imap]
	folder="Drafts"
	tunnel="cloud-imap"

[init]
	defaultBranch="main"

[log]
	decorate=short
	mailmap=true

[merge]
	conflictStyle=diff3
	tool=vimdiff

[pager]
	branch=false
	tag=false

[pull]
	ff = only

[push]
	default=current

[rebase]
	autoSquash=true

[status]
	showStash=true

[tag]
	sort = v:refname

[url "ssh://joshtriplett.org/"]
	pushInsteadOf = "https://joshtriplett.org/"

[url "ssh://git@github.com/"]
	pushInsteadOf = "https://github.com/"
	pushInsteadOf = "git://github.com/"

[include]
	path = ~/.private/gitconfig
