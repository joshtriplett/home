#!/bin/sh
PATH="$HOME/.local/bin:$HOME/.cargo/bin:/usr/lib/ccache:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games"
EDITOR=vim
PAGER=less
LESS='-iQR'
LESSHISTFILE=-
NVIM_LOG_FILE=/dev/null
BROWSER=firefox
ENSCRIPT='--header=|$n --highlight --media=letter --color'
GREP_COLOR='1;32'
BZR_LOG=/dev/null
DCONF_PROFILE=$HOME/.config/dconf/profile
export PATH EDITOR LESS LESSHISTFILE NVIM_LOG_FILE BROWSER ENSCRIPT GREP_COLOR BZR_LOG DCONF_PROFILE

if [ -d "/usr/lib/locale/C.UTF-8" ]; then
    LANG=C.UTF-8
else
    case " $(echo $(LC_ALL=C locale -a)) " in
        *\ C.UTF-8\ *) LANG=C.UTF-8 ;;
        *\ C.utf8\ *) LANG=C.utf8 ;;
        *\ en_US.utf8\ *) LANG=en_US.utf8 ;;
        *\ en_US.UTF-8\ *) LANG=en_US.UTF-8 ;;
        *) LANG=C ;;
    esac
fi
LC_CTYPE="$LANG"
LC_ADDRESS=C
LC_COLLATE=C
LC_IDENTIFICATION=C
LC_MEASUREMENT=C
LC_MESSAGES=C
LC_MONETARY=C
LC_NAME=C
LC_NUMERIC=C
LC_PAPER=C
LC_TELEPHONE=C
LC_TIME=C
export LANG LC_ADDRESS LC_COLLATE LC_CTYPE LC_IDENTIFICATION LC_MEASUREMENT LC_MESSAGES LC_MONETARY LC_NAME LC_NUMERIC LC_PAPER LC_TELEPHONE LC_TIME

EMAIL='josh@joshtriplett.org'
NAME='Josh Triplett'
DEBEMAIL=$EMAIL
DEBFULLNAME="$NAME"
GIT_AUTHOR_NAME="$NAME"
GIT_AUTHOR_EMAIL=$EMAIL
GIT_COMMITTER_NAME="$NAME"
GIT_COMMITTER_EMAIL=$EMAIL
export EMAIL NAME DEBEMAIL DEBFULLNAME GIT_AUTHOR_NAME GIT_AUTHOR_EMAIL GIT_COMMITTER_NAME GIT_COMMITTER_EMAIL
