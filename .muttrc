source ~/.private/muttrc

set spoolfile="=INBOX"
set record="=Sent"
set postponed="=Drafts"

set abort_unmodified=no
set autoedit=yes
set confirmappend=no
set edit_headers=yes
set header_cache=~/.cache/mutt-header-cache
set hostname=localhost
set imap_check_subscribed=yes
set include=yes
set index_format="%Z  %{%Y %b %d}  %-20.20F  %s"
set move=no
set pager_stop=yes
set recall=ask-no
set reverse_name=yes
set reverse_realname=no
set sidebar_divider_char="â”‚"
set sidebar_format="%B%*  %N "
set sidebar_visible=yes
set sidebar_width=18
set sleep_time=0
set use_domain=no

unignore List-Id

mailto_allow Cc In-Reply-To References

save-hook ~A =Archive

bind pager <up> previous-line
bind pager <down> next-line

alternates josh@joshtriplett.org
alternates josh@freedesktop.org
alternates josh@kernel.org

color normal default default
