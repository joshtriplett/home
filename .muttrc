account-hook . 'unset tunnel'
account-hook ^imaps://josh@joshtriplett.org/ 'set tunnel="ssh -q joshtriplett.org dovecot --exec-mail imap"'

set smtp_url=smtps://josh@joshtriplett.org@mail.gandi.net/
set spoolfile=imaps://josh@joshtriplett.org/INBOX
set folder=imaps://josh@joshtriplett.org/
set record="=Sent"
set postponed="=Drafts"
set confirmappend=no
set move=no

save-hook ~A =Archive

set edit_headers=yes
set pgp_use_gpg_agent=yes

alternates josh@joshtriplett.org
alternates josh@freedesktop.org
alternates josh@kernel.org
alternates josh@psas.pdx.edu
alternates tripletj@cs.pdx.edu
alternates jtriplett@openoffice.org
