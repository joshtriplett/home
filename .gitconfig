[alias]
	merged = !git branch --merged | grep -v '^[*]'

[branch]
	sort = v:refname

[checkout]
	workers = 0

[color]
	ui=auto

[color "diff"]
	old = red bold
	new = green bold

[color "grep"]
        # Temporarily disabled to make delta work better: https://github.com/dandavison/delta/issues/1635
        #match = bold green
	filename = magenta
	separator = cyan

[color "status"]
	added = green bold
	branch = cyan bold
	changed = red bold
	nobranch = red bold
	unmerged = red bold
	untracked = red bold

[column]
	status = auto dense
	tag = auto dense

[commit]
	cleanup = scissors
	verbose = true

[core]
	pager = delta

[credential "https://github.com"]
	helper =
	helper = !gh auth git-credential

[credential "https://gist.github.com"]
	helper =
	helper = !gh auth git-credential

[delta]
	color-only = true
	max-line-length = 4095
	navigate = true
	pager = less -iQR
	tabs = 8

[diff]
	algorithm=histogram
	tool=vimdiff

[fetch]
	parallel=0

[format]
	thread=true

[imap]
	folder="Drafts"
	tunnel="cloud-imap"

[init]
	defaultBranch="main"

[interactive]
	diffFilter="delta --color-only"

[log]
	decorate=short
	mailmap=true

[merge]
	conflictStyle=zdiff3
	tool=vimdiff

[pager]
	branch=false
	tag=false

[pull]
	ff = only

[push]
	default=current
	followTags=true
	recurseSubmodules=check

[rebase]
	autoSquash=true

[status]
	showStash=true

[submodule]
	recurse = true

[tag]
	sort = v:refname

[url "https://github.com/"]
	insteadOf = "git@github.com:"
	insteadOf = "ssh://git@github.com/"
	insteadOf = "git://github.com/"
