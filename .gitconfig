[color]
	ui=auto

[color "diff"]
	old = red bold
	new = green bold

[color "grep"]
	match = bold green
	filename = magenta
	separator = cyan

[color "status"]
	added = green bold
	branch = cyan bold
	changed = red bold
	nobranch = red bold
	unmerged = red bold
	untracked = red bold

[diff]
	tool=vimdiff

[imap]
	folder="Drafts"
	tunnel="cloud-imap"

[log]
	decorate=short

[merge]
	tool=vimdiff

[pager]
	branch=false
	tag=false

[push]
	default=current

[url "ssh://joshtriplett.org/"]
	pushInsteadOf = "https://joshtriplett.org/"

[url "ssh://git@github.com/"]
	pushInsteadOf = "https://github.com/"
	pushInsteadOf = "git://github.com/"

[include]
	path = ~/.private/gitconfig
