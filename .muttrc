account-hook . 'unset tunnel'
account-hook ^imaps://josh@joshtriplett.org/ 'set tunnel="cloud-imap"'

set smtp_url=smtps://josh@joshtriplett.org@mail.gandi.net/
set folder=imaps://josh@joshtriplett.org
set spoolfile="=INBOX"
set record="=Sent"
set postponed="=Drafts"

set autoedit=yes
set confirmappend=no
set edit_headers=yes
set imap_check_subscribed=yes
set include=yes
set index_format="%Z  %{%Y %b %d}  %-25.25F  %s"
set move=no
set pager_stop=yes
set pgp_use_gpg_agent=yes
set recall=ask-no
set sleep_time=0

save-hook ~A =Archive

bind pager <up> previous-line
bind pager <down> next-line

alternates josh@joshtriplett.org
alternates josh@freedesktop.org
alternates josh@kernel.org
alternates josh@psas.pdx.edu
alternates josh@serialist.net
alternates tripletj@cs.pdx.edu
alternates jtriplett@openoffice.org
